                        <span className="text-xs font-bold text-slate-400 min-w-[30px] text-right">{Math.round(percent)}%</span>
                    </div>
                </div>

                {/* Accordions */}
                <div className="divide-y divide-slate-100">
                    {skills.map(category => (
