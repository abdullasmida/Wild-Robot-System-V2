                let userProfile = null;
                const { data: profileData } = await supabase
                    .from('profiles')
                    .select('first_name, last_name, academy_name')
                    .eq('id', user.id)
                    .single();

                if (profileData) {
                    userProfile = profileData;
                    setProfile(profileData);
